datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model LostItem {
  category     EnumLostItemCategory?
  createdAt    DateTime              @default(now())
  dateLost     DateTime?
  description  String?
  id           String                @id @default(cuid())
  locationLost String?
  name         String?
  updatedAt    DateTime              @updatedAt
  user         User?                 @relation(fields: [userId], references: [id])
  userId       String?
}

model FoundItem {
  category      EnumFoundItemCategory?
  createdAt     DateTime               @default(now())
  dateFound     DateTime?
  description   String?
  id            String                 @id @default(cuid())
  image         Json?
  locationFound String?
  name          String?
  updatedAt     DateTime               @updatedAt
  user          User?                  @relation(fields: [userId], references: [id])
  userId        String?
}

model User {
  createdAt  DateTime    @default(now())
  email      String?     @unique
  firstName  String?
  foundItems FoundItem[]
  id         String      @id @default(cuid())
  lastName   String?
  lostItems  LostItem[]
  password   String
  roles      Json
  updatedAt  DateTime    @updatedAt
  username   String      @unique
}

enum EnumLostItemCategory {
  Option1
}

enum EnumFoundItemCategory {
  Option1
}
